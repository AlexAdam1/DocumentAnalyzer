import java.util.Scanner;
import java.io.*;
import java.util.ArrayList;

public class DocumentAnalyzer {
    public static void main(String[] args) throws IOException {
        Scanner sc = new Scanner(System.in);
        FileInputStream fis = null;
        int count;
        String input;
        String combo = "";
        ArrayList<String> wordList = new ArrayList<>();
        ArrayList<String> characterArray = new ArrayList<String>();
        System.out.println("Enter the file name: ");
        fis = new FileInputStream(sc.nextLine());
        sc = new Scanner(fis);
        while (sc.hasNext()) {
            input = sc.next();
            System.out.println(input + " ");
            wordList.add(input);
        }
        System.out.println(wordList);
        System.out.println("Array finished");
        System.out.println(wordList);
        for (int i = 0; i < wordList.size(); i++) {
            count = 0;
            System.out.println(wordList.get(i));
            for (int j = 0; j < wordList.size(); j++) {
                if (wordList.get(i).equalsIgnoreCase(wordList.get(j))) {
                    count++;
                }
            }
            System.out.println(count);
        }
fis.close();
    }
}


REMOVE SYMBOLS CODE
for (int i = 0; i < wordList.get(i).length(); i++) {
            for (int j = 0; j < wordList.get(i).length(); j++) {
                combo = "";
                if (Character.isLetter(wordList.get(i).charAt(j))) {
                characterArray.add(wordList.get(i).charAt(j) + "");
                }
            }
            for (int j = 0; j < characterArray.size(); j++) {
                combo = combo + characterArray.get(j);
            }
            System.out.println(combo);
            wordList.set(i, combo);
        }
